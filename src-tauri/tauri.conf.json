{
    "productName": "ifoto",
    "version": "0.1.0",
    "identifier": "com.ifoto.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "ifoto",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true
            }
        ],
        "security": {
            "capabilities": [
                "main-capability"
            ]
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "deb"
        ],
        "icon": [
            "icons/icon.png"
        ],
        "category": "Photography",
        "shortDescription": "Photo and media viewer with Liquid Glass UI",
        "longDescription": "View and organize photos and media. Select a directory, scan and categorize, search with natural language."
    }
}